<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="736dp">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Profile"
            android:textColor="#FFC107"
            android:textSize="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.038" />

        <ImageView
            android:id="@+id/img1"
            android:layout_width="85dp"
            android:layout_height="73dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/custom_image_view"
            android:src="@drawable/baseline_account_outline_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.122" />

        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/gridLayout2"
            android:layout_width="412dp"
            android:layout_height="138dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.319">


            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="Name"
                app:layout_column="0"
                app:layout_row="0" />

            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="Email"
                app:layout_column="0"
                app:layout_row="1" />

            <TextView
                android:id="@+id/tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="Password"
                app:layout_column="0"
                app:layout_row="2" />

            <EditText
                android:id="@+id/edt1"
                android:layout_width="269dp"
                android:layout_height="44dp"
                android:background="@drawable/custom_text_view_2"
                android:ems="10"
                android:hint="Nguyen Duc Anh"
                android:inputType="text"
                android:paddingLeft="20dp"
                app:layout_column="1"
                app:layout_row="0" />

            <EditText
                android:id="@+id/edt2"
                android:layout_width="271dp"
                android:layout_height="44dp"
                android:background="@drawable/custom_text_view_2"
                android:ems="10"
                android:hint="datnguyen1854@gmail.com"
                android:inputType="text"
                android:paddingLeft="20dp"
                app:layout_column="1"
                app:layout_row="1" />

            <EditText
                android:id="@+id/edt3"
                android:layout_width="271dp"
                android:layout_height="47dp"
                android:background="@drawable/custom_text_view_2"
                android:ems="10"
                android:hint="************"
                android:inputType="textPassword"
                android:paddingLeft="20dp"
                app:layout_column="1"
                app:layout_row="2" />
        </androidx.gridlayout.widget.GridLayout>

        <Button
            android:id="@+id/button3"
            android:layout_width="337dp"
            android:layout_height="59dp"
            android:background="@drawable/custom_btn"
            android:text="Sign out"
            android:textSize="23dp"
            app:backgroundTint = "@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gridLayout2"
            app:layout_constraintVertical_bias="0.088" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
